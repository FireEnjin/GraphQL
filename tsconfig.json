{
  "compilerOptions": {
    "lib": [
      "es6",
      "dom",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "noImplicitReturns": false,
    "outDir": "dist",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}