{
  "name": "@fireenjin/graphql",
  "version": "1.0.0",
  "description": "A set of tools for working with GraphQL",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc",
    "start": "tsc -w",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "publish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FireEnjin/GraphQL.git"
  },
  "dependencies": {
    "apollo-server-cloud-functions": "^3.13.0",
    "class-validator": "^0.14.1",
    "date-fns": "^2.30.0",
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^5.0.1",
    "fireorm": "^0.23.3",
    "graphql": "^15.8.0",
    "graphql-type-json": "^0.3.2",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^12.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.0",
    "@semantic-release/release-notes-generator": "^13.0.0",
    "@types/jest": "^29.5.12",
    "@types/pluralize": "^0.0.33",
    "astro": "^4.7.1",
    "firebase-functions-test": "^3.2.0",
    "jest": "^29.7.0",
    "semantic-release": "^23.0.8",
    "ts-jest": "^29.1.2",
    "tslint": "^6.1.3",
    "typescript": "^5.4.5"
  },
  "keywords": [
    "graphql",
    "typescript",
    "firebase",
    "firestore"
  ],
  "author": "Madness Labs",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FireEnjin/GraphQL/issues"
  },
  "homepage": "https://github.com/FireEnjin/GraphQL#readme",
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts?)$",
    "testEnvironmentOptions": {
      "url": "http://localhost"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
